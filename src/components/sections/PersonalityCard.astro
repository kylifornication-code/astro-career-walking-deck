---
import Card from '../Card.astro'
import { Badge } from '../ui/badge'
---

<Card colSpan="md:col-span-2 lg:col-span-1" rowSpan="md:row-span-2 lg:row-span-2" title="Personality">
  <div class="mt-2 space-y-4">
    <div class="flex flex-col gap-2">
      <h3 class="text-sm font-semibold text-muted-foreground">MBTI</h3>
      <div class="flex w-full flex-wrap items-center justify-center gap-2">
        <Badge variant="outline">ENTJ</Badge>
      </div>
    </div>
    <div class="flex flex-col gap-2">
      <h3 class="text-sm font-semibold text-muted-foreground">Clifton</h3>
      <div class="flex w-full flex-wrap items-center justify-center gap-2">
        <Badge variant="outline">Achiever</Badge>
        <Badge variant="outline">Resilience</Badge>
        <Badge variant="outline">Flexibility</Badge>
        <Badge variant="outline">Team-Player</Badge>
        <Badge variant="outline">Strategic</Badge>
      </div>
    </div>
  </div>
</Card>

